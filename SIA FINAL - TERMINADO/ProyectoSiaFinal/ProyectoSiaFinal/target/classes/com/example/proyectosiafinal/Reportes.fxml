<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="480" prefWidth="720" xmlns="http://javafx.com/javafx/17.0.8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectosiafinal.ReportesController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" BorderPane.alignment="CENTER">
            <children>
                <Label text="Tipo de reporte:" />
                <ComboBox fx:id="cbReporte" prefWidth="260" />
                <Button fx:id="btnGenerar" text="Generar" />
                <Button fx:id="btnSalir" text="Volver al menu principal" />
            </children>
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
        </HBox>
    </top>

    <center>
        <TextArea fx:id="taResultado" wrapText="true" />
    </center>
</BorderPane>
